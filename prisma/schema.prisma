generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id         String    @id @default(uuid())
  name       String
  birthdate  DateTime
  Location   Location? @relation(fields: [locationId], references: [id])
  locationId String?
  avaliable  Boolean   @default(true)
  created_at DateTime  @default(now())
}

model Ong {
  id         String    @id @default(uuid())
  name       String
  Location   Location? @relation(fields: [locationId], references: [id])
  locationId String?
  created_at DateTime  @default(now())
}

model Location {
  id    String @id @default(uuid())
  city  String
  state String

  pets Pet[]
  ongs Ong[]
}
